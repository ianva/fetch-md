{
  "name": "fetch-md",
  "version": "1.0.0",
  "description": "A CLI tool to fetch web page and convert to markdown",
  "type": "module",
  "bin": {
    "fetmd": "./dist/cli.js"
  },
  "preferGlobal": true,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "cli",
    "markdown",
    "webpage",
    "converter",
    "fetch",
    "download",
    "images"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/fetch-md.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/fetch-md/issues"
  },
  "homepage": "https://github.com/yourusername/fetch-md#readme",
  "engines": {
    "node": ">=14.17.0"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build ./src/cli.ts --outdir ./dist --target node",
    "postbuild": "chmod +x ./dist/cli.js",
    "prepare": "bun run build",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "chalk": "^5.3.0",
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1",
    "playwright": "^1.49.0",
    "turndown": "^7.1.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.10.5",
    "@types/turndown": "^5.0.4",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}
